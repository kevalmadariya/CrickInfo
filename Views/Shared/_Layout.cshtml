@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>IPL Cricket Central</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(180deg, #1E3A8A 0%, #7C3AED 100%);
            background-size: cover;
            background-repeat: no-repeat;
            animation: slideUp 1s ease-in-out forwards;
        }

        @@keyframes slideUp {
            from {
                transform: translateY(100%);
            }
            to {
                transform: translateY(0);
            }
        }

        .content {
            position: relative;
            z-index: 10; /* Ensure content is above the background */
        }
    </style>
    <link rel="stylesheet" href="~/css/register.css" />
    <link rel="stylesheet" href="~/css/team.css" />

</head>
<body class="text-white">

    <header class="bg-white shadow">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <div class="flex items-center">
                <i class="fas fa-trophy text-orange-500 text-2xl"></i>
                <h1 class="text-2xl font-bold text-blue-600 ml-2">Cricket Central</h1>
            </div>
            <nav class="space-x-4">
                <a class="text-green-600 hover:text-blue-600" href="/">Home</a>
                <a class="text-orange-600 font-semibold" href="@Url.Action("Content","Tournament")">Tournament</a>
                <a class="text-purple-600 font-semibold" href="/Predict">Predict</a>
                <a class="text-orange-600 font-semibold" href="@Url.Action("Login","User")">Login</a>
                <a class="text-blue-600 font-semibold" href="@Url.Action("Create","User")">Register</a>
            </nav>
        </div>
    </header>

    <div class="container mx-auto px-4 py-20 text-center content">
         @RenderBody()

            <!-- Optional buttons -->
            <!-- <button class="bg-orange-500 text-white py-2 px-4 rounded-full flex items-center">
                <i class="fas fa-calendar-alt mr-2"></i>
                Latest Fixtures
            </button> -->
            <!-- <button class="bg-white text-gray-700 py-2 px-4 rounded-full flex items-center">
                <i class="fas fa-users mr-2"></i>
                Explore Teams
            </button> -->
    </div>
        @RenderSection("Scripts", required: false)


</body>
</html>
