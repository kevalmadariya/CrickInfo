<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - CrickInfo</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
        }

        header {
            background-color: #007bff;
            padding: 20px;
            color: white;
            text-align: center;
            font-size: 28px;
            font-weight: bold;
            text-shadow: 2px 2px #000;
        }

        nav {
            background-color: #343a40;
            padding: 10px 0;
        }

        nav ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
        }

        nav ul li {
            margin: 0 15px;
        }

        nav ul li a {
            color: white;
            text-decoration: none;
            font-size: 18px;
            padding: 8px 16px;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        nav ul li a:hover {
            background-color: #007bff;
        }

        main {
            padding: 20px;
            text-align: center;
        }

        footer {
            background-color: #343a40;
            color: white;
            padding: 20px;
            text-align: center;
            margin-top: 20px;
        }

        footer a {
            color: #007bff;
            text-decoration: none;
        }

        footer a:hover {
            text-decoration: underline;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 10px;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <header>
        CrickInfo
    </header>

    <nav>
        <ul>
            <li><a href="@Url.Action("Index", "Tournaments")">Tournaments</a></li>
            <li><a href="@Url.Action("Index", "PointsTables")">Points Tables</a></li>
            <li><a href="@Url.Action("Predict", "Home")">Predict</a></li>
            <li><a href="@Url.Action("Register", "Account")">Register</a> / <a href="@Url.Action("Login", "Account")">Login</a></li>
        </ul>
    </nav>

    <main>
        @RenderBody()
    </main>

    <footer>
        <p>&copy; 2024 CrickInfo | <a href="@Url.Action("Privacy", "Home")">Privacy Policy</a> | <a href="@Url.Action("Terms", "Home")">Terms of Service</a></p>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
