@model crickinfo_mvc_ef_core.Models.Tournament

<h1>Add Tournament</h1>

<h4>Tournament Registration</h4>
<hr />
<div class="row">
    @if (ViewBag.ModelStateValid == true)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }
    else if (ViewBag.ModelStateValid == false)
    {
        <div class="alert alert-danger">@ViewBag.Message</div>
    }
    <hr />

    @if (ViewBag.ModelStateValid == false)
    {
        <div class="alert alert-danger">
            <strong>Errors:</strong><br />
            @Html.Raw(ViewBag.ErrorMessages) <!-- Display error messages -->
        </div>
    }

    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfTournament" class="control-label"></label>
                <input asp-for="DateOfTournament" class="form-control" type="date" />
                <span asp-validation-for="DateOfTournament" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="ADD" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

