@model crickinfo_mvc_ef_core.Models.User

@{
    ViewData["Title"] = "User Registration";
}

<link rel="stylesheet" href="~/css/register.css" />

<div class="form-container">
    <h1 class="form-title">User Registration</h1>
    <hr />
    <form asp-action="Create" class="registration-form">
        <div asp-validation-summary="ModelOnly" class="text-danger summary"></div>

        <div class="form-group">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control custom-input" placeholder="Enter your Name"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control custom-input" placeholder="Enter Valid Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control custom-input" type="password" placeholder="Strong Password"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Register" class="btn-submit" />
        </div>
    </form>

    <div class="back-link">
        <a asp-action="Index">← Back to List</a>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
